<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MessagingRealtime</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/mdb.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
</head>
@using Microsoft.AspNetCore.Http
@using MessagingRealtime.Helpers
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor
@{
    string UserName = string.Empty;
    var currentUserString = HttpContextAccessor.HttpContext.Session.GetString(Constants.LoggedInUser);
    if (currentUserString == null)
    {
        Context.Response.Redirect("/Authentication/LogIn");
    }
    else
    {
        AppUser appUser = JsonConvert.DeserializeObject<AppUser>(currentUserString);
        UserName = appUser.UserName;
    }


}
<body>
    <style>
        html {
            position: relative;
            min-height: 100%;
        }

        body {
            /* Margin bottom by footer height */
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 60px;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            /* Set the fixed height of the footer here */
            height: 60px;
            line-height: 60px; /* Vertically center the text there */
            background-color: #f5f5f5;
            margin-bottom: 0;
        }

        #footer-text {
            margin-bottom: 0px;
            font-size: 11px;
        }

        .nav-link {
            margin-top: 10px;
        }

        .dropdown .dropdown-menu .dropdown-item:active, .dropdown .dropdown-menu .dropdown-item:hover, .dropleft .dropdown-menu .dropdown-item:active, .dropleft .dropdown-menu .dropdown-item:hover, .dropright .dropdown-menu .dropdown-item:active, .dropright .dropdown-menu .dropdown-item:hover, .dropup .dropdown-menu .dropdown-item:active, .dropup .dropdown-menu .dropdown-item:hover {
            background-color: #4540f7 !important;
        }
        .btn-primary {
            color: #fff;
            background-color: #7571f9 !important;
            border-color: #7571f9 !important;
        }
        .btn-primary:active, .btn-primary:focus, .btn-primary:hover {
            background: #4540f7 !important;
            background-color: #4540f7 !important;
            color: #fff;
            border-color: #4540f7;
        }

    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MessagingRealtime</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown show">
                                <a class=" nav-link" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <ion-icon size="large" name="person-circle-sharp"></ion-icon>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="#"><i class="fas fa-id-badge pr-1" aria-hidden="true"></i> @UserName</a>
                                    <a class="dropdown-item" href="#"><i class="fas fa-cog pr-1" aria-hidden="true"></i> Settings</a>
                                    <a class="dropdown-item" href="/Authentication/SignOut"><i class="fas fa-power-off pr-1" aria-hidden="true"></i> Sign Out</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="text-center">
            <p id="footer-text">Copyright &copy; Designed by <a href="#">Saif Kamal Chowdhury</a> 2021&nbsp;</p>
        </div>
    </footer>
    <script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/js/mdb.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/popper.min.js"></script>
    <script type="text/javascript" src="~/js/mdb.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
